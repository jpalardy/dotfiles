# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config resizePercentOf screenSize

alias center screenOriginX+screenSizeX/2-windowSizeX/2;screenOriginY+screenSizeY/2-windowSizeY/2 windowSizeX;windowSizeY

bind 1:ctrl;alt move screenOriginX;screenOriginY screenSizeX*1/3;screenSizeY*1/3
bind 2:ctrl;alt move screenOriginX;screenOriginY screenSizeX*2/3;screenSizeY*1/3
bind 3:ctrl;alt move screenOriginX;screenOriginY screenSizeX*3/3;screenSizeY*1/3

bind 4:ctrl;alt move screenOriginX;screenOriginY screenSizeX*1/3;screenSizeY*2/3
bind 5:ctrl;alt move screenOriginX;screenOriginY screenSizeX*2/3;screenSizeY*2/3
bind 6:ctrl;alt move screenOriginX;screenOriginY screenSizeX*3/3;screenSizeY*2/3

bind 7:ctrl;alt move screenOriginX;screenOriginY screenSizeX*1/3;screenSizeY*3/3
bind 8:ctrl;alt move screenOriginX;screenOriginY screenSizeX*2/3;screenSizeY*3/3
bind 9:ctrl;alt move screenOriginX;screenOriginY screenSizeX*3/3;screenSizeY*3/3

# Push Bindings
bind right:ctrl;alt push right
bind  left:ctrl;alt push left
bind    up:ctrl;alt push up
bind  down:ctrl;alt push down
bind     =:ctrl;alt move ${center}

