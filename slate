# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config resizePercentOf screenSize

alias center screenOriginX+screenSizeX/2-windowSizeX/2;screenOriginY+screenSizeY/2-windowSizeY/2 windowSizeX;windowSizeY
alias BROWSER_WIDTH 1150

# b -- like browser -- 992..1200px
bind b:ctrl;alt move screenOriginX+screenSizeX-${BROWSER_WIDTH};screenOriginY ${BROWSER_WIDTH};screenSizeY

bind q:ctrl;alt move screenOriginX;screenOriginY screenSizeX*1/3;screenSizeY*1/3
bind w:ctrl;alt move screenOriginX;screenOriginY screenSizeX*2/3;screenSizeY*1/3
bind e:ctrl;alt move screenOriginX;screenOriginY screenSizeX*3/3;screenSizeY*1/3

bind a:ctrl;alt move screenOriginX;screenOriginY screenSizeX*1/3;screenSizeY*2/3
bind s:ctrl;alt move screenOriginX;screenOriginY screenSizeX*2/3;screenSizeY*2/3
bind d:ctrl;alt move screenOriginX;screenOriginY screenSizeX*3/3;screenSizeY*2/3

bind z:ctrl;alt move screenOriginX;screenOriginY screenSizeX*1/3;screenSizeY*3/3
bind x:ctrl;alt move screenOriginX;screenOriginY screenSizeX*2/3;screenSizeY*3/3
bind c:ctrl;alt move screenOriginX;screenOriginY screenSizeX*3/3;screenSizeY*3/3

# Push Bindings
bind right:ctrl;alt push right
bind  left:ctrl;alt push left
bind    up:ctrl;alt push up
bind  down:ctrl;alt push down
bind     =:ctrl;alt move ${center}

