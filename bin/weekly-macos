#!/usr/bin/env bash

set -o nounset
set -o errexit
set -o pipefail

confirm() {
  local msg=$1
  while true; do
    read -p "$msg (Y/n) " -r
    case $REPLY in
      Y | y | "")
        return 0
        ;;
      N | n)
        return 1
        ;;
    esac
  done
}

# -------------------------------------------------

brew update
brew autoremove
brew outdated

if confirm "upgrade?"; then
  brew upgrade
  brew cleanup -s
fi

