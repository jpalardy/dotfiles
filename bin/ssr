#!/bin/bash

red=`tput setaf 1`
green=`tput setaf 2`
reset=`tput sgr0`

#-------------------------------------------------

ok_fail() {
  if [ $? -eq 0 ]; then
    echo -n "[$green  OK  $reset]"
  else
    echo -n "[$red FAIL $reset]"
  fi
}

check_bin() {
  local bin_name=$1
  local pkg_name=${2:-$1}
  which -s $bin_name
  ok_fail
  echo " $pkg_name"
}

#-------------------------------------------------

check_bin node
check_bin eslint
check_bin jsonlint
check_bin csslint
check_bin nodemon
check_bin ncu         npm-check-updates
check_bin nsp
check_bin depcheck
check_bin yarn
check_bin prettier
check_bin fixjson
check_bin yaml2json   yamljs
echo
check_bin jq
check_bin R
check_bin gcal
check_bin gpg
check_bin curl
check_bin wget
check_bin fswatch
check_bin pv
check_bin utimer

