#!/bin/bash

COLOR_RESET=$(tput sgr0)
COLOR_RED=$(tput setaf 1)
COLOR_GREEN=$(tput setaf 2)

#-------------------------------------------------

check_bin() {
  local bin_name=$1
  local pkg_name=${2:-$1}
  if command -v "$bin_name" > /dev/null; then
    echo -n "[$COLOR_GREEN  OK  $COLOR_RESET]"
  else
    echo -n "[$COLOR_RED FAIL $COLOR_RESET]"
  fi
  echo " $pkg_name"
}

#-------------------------------------------------

# cli
check_bin rg          ripgrep
check_bin jq
check_bin gcal
check_bin gpg
check_bin curl
check_bin wget
check_bin pup
check_bin qrencode
check_bin pwgen
echo

# linters in npm
check_bin node
check_bin jsonlint
check_bin fixjson
check_bin csslint
check_bin shellcheck
echo

# linters, pretty-printers in brew
check_bin yamllint
check_bin pg_format pgformatter

# node
if [ -n "$SSR_CHECK_NODE" ]; then
  echo
  check_bin nodemon
  check_bin eslint
  check_bin prettier
  check_bin ncu         npm-check-updates
fi

# go
if [ -n "$SSR_CHECK_GO" ]; then
  echo
  check_bin goimports
  check_bin golint
  check_bin golangci-lint
fi

