#!/bin/bash

COLOR_RESET=$(tput sgr0)
COLOR_RED=$(tput setaf 1)
COLOR_GREEN=$(tput setaf 2)

#-------------------------------------------------

check_bin() {
  local bin_name=$1
  local pkg_name=${2:-$1}
  if command -v "$bin_name" > /dev/null; then
    echo -n "[$COLOR_GREEN  OK  $COLOR_RESET]"
  else
    echo -n "[$COLOR_RED FAIL $COLOR_RESET]"
  fi
  echo " $pkg_name"
}

#-------------------------------------------------

check_bin node
check_bin eslint
check_bin jsonlint
check_bin csslint
check_bin nodemon
check_bin ncu         npm-check-updates
check_bin nsp
check_bin depcheck
check_bin yarn
check_bin prettier
check_bin fixjson
check_bin yaml2json   yamljs

echo

check_bin jq
check_bin R
check_bin gcal
check_bin gpg
check_bin curl
check_bin wget
check_bin fswatch
check_bin pv
check_bin utimer

