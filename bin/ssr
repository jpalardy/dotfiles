#!/bin/bash

COLOR_RESET=$(tput sgr0)
COLOR_RED=$(tput setaf 1)
COLOR_GREEN=$(tput setaf 2)

#-------------------------------------------------

i=0
n=2

check_bin() {
  local bin_name=$1
  local pkg_name=${2:-$1}
  if command -v "$bin_name" > /dev/null; then
    echo -n "[$COLOR_GREEN  OK  $COLOR_RESET]"
  else
    echo -n "[$COLOR_RED FAIL $COLOR_RESET]"
  fi
  printf " %-21s" "$pkg_name"

  i=$((i + 1))
  if [ "$i" -ge "$n" ]; then
    i=0
    echo
  fi
}

flush() {
  if [ "$i" != 0 ]; then
    i=0
    echo
  fi
  echo
}

#-------------------------------------------------

# cli
check_bin tmux
check_bin rg          ripgrep
check_bin jq
check_bin gcal
check_bin gpg
check_bin curl
check_bin wget
check_bin qrencode
check_bin pwgen
flush

# network
check_bin ip
check_bin mtr
flush

# experimental
check_bin bat
check_bin dust
check_bin fzf
check_bin htop
check_bin tree
check_bin pstree
check_bin entr
check_bin cloc
flush

# linters in npm
check_bin node
check_bin jsonlint
check_bin fixjson
check_bin csslint
check_bin shellcheck
flush

# linters, pretty-printers in brew
check_bin yamllint
check_bin pg_format pgformatter
flush

# node
if command -v node >/dev/null; then
  check_bin nodemon
  check_bin prettier
  check_bin ncu         npm-check-updates
  flush
fi

# elm
if command -v elm >/dev/null; then
  check_bin elm-format
  flush
fi

# go
if command -v go >/dev/null; then
  check_bin golangci-lint
  flush
fi

