#!/bin/bash

list_commands() {
  # throw-away
  if [ "$(basename $(dirname $PWD))" == ".throw-away" ]; then
    echo 'vimrepl R -c "R --quiet"'
    echo 'vimrepl exs -c iex'
    echo 'vimrepl js -c node'
  fi
  # node.js -related
  if [ -e "package.json" ]; then
    echo "npm outdated"
    echo "ncu -u; npm install; git add package*; npm audit fix"
  fi
  # go -related
  if [ -e "go.mod" ]; then
    echo "go get -u"
    echo "go mod tidy"
  fi
}

commands=$(list_commands)

if [ -z "$commands" ]; then
  exit
fi

pick=$(echo "$commands" | fzf)

if [ -z "$pick" ]; then
  exit
fi

eval "$pick"

