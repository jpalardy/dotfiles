#!/bin/bash

find_trailing() {
  rg '\s+$' -l
}

find_funny() {
  rg '[^ -~]' -l
}

find_blank() {
  rg -U '\n\s*\n\s*\n' -l
}

# -------------------------------------------------

if test -z "$1"; then
  (
    printf "%5s trailing\n" $(find_trailing | wc -l)
    printf "%5s funny\n" $(find_funny | wc -l)
    printf "%5s blank\n" $(find_blank | wc -l)
  ) | awk '$1 != 0'
  exit
fi

eval "find_$1"

