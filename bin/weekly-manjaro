#!/usr/bin/env bash

confirm() {
  local msg=$1
  while true; do
    read -p "$msg (Y/n) " -r
    case $REPLY in
      Y | y | "")
        return 0
        ;;
      N | n)
        return 1
        ;;
    esac
  done
}

# -------------------------------------------------

pacman -Syu

# dangling packages
pacman -Qdt | awk '{print $1}' | xargs --no-run-if-empty pacman -Rns

# -------------------------------------------------

if confirm "reboot?"; then
  reboot
fi

