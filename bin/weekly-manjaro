#!/usr/bin/env bash

confirm() {
  local msg=$1
  while true; do
    read -p "$msg (Y/n) " -r
    case $REPLY in
      Y | y | "")
        return 0
        ;;
      N | n)
        return 1
        ;;
    esac
  done
}

# -------------------------------------------------

if confirm "update mirrors?"; then
  pacman-mirrors --continent --method rank
fi

pacman -Syu

dangling_packages=$(pacman -Qdt | awk '{print $1}')
if [ -n "$dangling_packages" ]; then
  # shellcheck disable=SC2086
  pacman -Rns $dangling_packages
fi

mhwd-kernel -li
echo '-------------------------------------------------'
pacman -Ss 'kernel and modules'

echo '-------------------------------------------------'
echo 'sudo mhwd-kernel -i linux6x'
echo '-------------------------------------------------'

pacman -Sc --noconfirm

if confirm "reboot?"; then
  reboot
fi

