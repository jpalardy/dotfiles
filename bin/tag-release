#!/bin/bash

git tag --sort=creatordate | tail | awk '{print "    ", $0}'
echo "-------------------------------------------------"

dot=${1:?"missing dot"}
rc=$2

version="$(date +"%y.%m").$dot"
if [ -n "$rc" ]; then
  version="${version}-RC${rc}"
fi

version="$(rlwrap -S "tag: " -P $version -o cat)"

git tag -a "$version" -m "Tagging $version"

