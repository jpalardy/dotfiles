#!/usr/bin/env bash

apt update

apt upgrade

apt dist-upgrade

confirm() {
  local msg=$1
  while true; do
    read -p "$msg (Y/n) " -r
    case $REPLY in
      Y | y | "")
        return 0
        ;;
      N | n)
        return 1
        ;;
    esac
  done
}

if confirm "reboot?"; then
  reboot
fi


