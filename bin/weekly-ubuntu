#!/usr/bin/env bash

confirm() {
  local msg=$1
  while true; do
    read -p "$msg (Y/n) " -r
    case $REPLY in
      Y | y | "")
        return 0
        ;;
      N | n)
        return 1
        ;;
    esac
  done
}

# -------------------------------------------------

apt update
apt upgrade
apt dist-upgrade
apt autoremove

if confirm "reboot?"; then
  reboot
fi

