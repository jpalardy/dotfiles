#!/bin/bash

if test $# == 0; then
  cat >&2 <<EOM
Usage: $(basename "$0") -e "..."

variables:
  - curr    current value to compare and split on
  - prev    prev value
EOM
  exit 1
fi

# -------------------------------------------------

awk "$@" -e '

{
  if (NR > 1 && prev != curr) {
    print ""
  }
  print
  prev = curr
}

'

