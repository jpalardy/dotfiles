#!/usr/bin/env -S awk -f

BEGIN {
  start = -1
  # try yyyy-mm-dd
  if (ARGV[1] ~ /-/) {
    start = mktime(sprintf("%s 0 0 0", gensub("-", " ", "g", ARGV[1])))
  }
  # try yyyy
  if (start == -1) {
    start = mktime(sprintf("%s 1 1 0 0 0", ARGV[1]))
  }
  # default: today
  if (start == -1) {
    start = systime()
  }

  i = 0
  while (1) {
    print strftime("%F %A", start + (i * 24 * 60 * 60))
    i++
  }
}

