#!/usr/bin/env awk-f

BEGIN {
  if (ENVIRON["TMUX"] == "") {
    print "need to run inside tmux" > "/dev/stderr"
    exit
  }

  # - no filename given
  # - interactive (not pipe) input
  if (ARGV[1] == "" && !system("tty > /dev/null")) {
    ARGV[1] = ".atm"
    ARGC = 2
  }
}

# remove comments
{
  sub(/ *#.*/, "")
}

# skip blank lines
NF == 0 {
  blank++
  if (blank == 1) { print }
  next
}

{
  blank = 0
  print "tmux", $0
}

