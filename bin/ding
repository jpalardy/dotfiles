#!/bin/bash

# -------------------------------------------------

if test -e "$HOME/.github/ding/bin/ding"; then
  "$HOME/.github/ding/bin/ding" "$@"
  exit $?
fi

# -------------------------------------------------

play_sound() {
  if ! command -v afplay &>/dev/null; then
    echo >&2 "ding: cannot play sound!"
    return
  fi

  if [ "$1" -eq 0 ]; then
    afplay "/System/Library/Sounds/Purr.aiff"
    return
  fi

  afplay "/System/Library/Sounds/Basso.aiff"
}

"$@"
lastexit=$?

play_sound "$lastexit" &
exit "$lastexit"

