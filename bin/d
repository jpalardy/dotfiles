#!/bin/bash

GREEN=$(tput setaf 28)
current=$(date +%Z)

# https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
for tz in America/Vancouver America/Toronto Etc/UTC Asia/Tokyo; do
  if [ "$(TZ=$tz date +%Z)" == "$current" ]; then
    echo -n "$GREEN"
  fi

  TZ=$tz date +"%H:%M %Z"
  echo -n "$(tput sgr0)"
done

