#!/bin/bash

DEBUG=0

while getopts "df" flag; do
  case $flag in
    d) DEBUG=1
       ;;
    f) if [ -e "$CACHE" ]; then
         rm $CACHE
       fi
       ;;
  esac
done

debug() {
  if [ "$DEBUG" == "1" ]; then
    echo >&2 "$@"
  fi
}

first_exist() {
  for f in "$@"; do
    if [ -f "$f" ]; then
      echo $f
      break
    fi
  done
}

filter() {
  local FILTER=$(first_exist "$@")
  debug "FILTER: $FILTER"
  if [ -x "$FILTER" ]; then
    $FILTER
  elif [ -e "$FILTER" ]; then
    grep -E -v -f "$FILTER"
  else
    cat
  fi
}

#-------------------------------------------------

if [ -f "$CACHE" ]; then
  cat "$CACHE"
  exit
fi

if [ -n "$CACHE" ]; then
  ack -af --sort-files | filter "$HOME/.filter" | filter ".filter" ".gitignore" | tee "$CACHE"
else
  ack -af --sort-files | filter "$HOME/.filter" | filter ".filter" ".gitignore"
fi

