#!/bin/zsh

REPOS=${REPOS:?"environment variable REPOS is empty"}

# warm ssh connection, ugly...
ssh droplet.jpalardy.com exit

cmd=()
i=0
for repo in ${=REPOS}; do
  let i=i+1
  if [[ $i == 1 && -z $TMUX ]]; then
    cmd+="new-session 'cd $repo; git fp; git st; exec $SHELL'"
  else
    cmd+="split-window 'cd $repo; git fp; git st; exec $SHELL'"
  fi
done
cmd+="select-layout even-vertical"

eval "tmux ${(j:\; :)cmd}"

