#!/bin/bash

# start tmux if not already inside tmux
if [ -z "$TMUX" ]; then
  tmux new-session -d
  tmux send-keys "repo-sync" Enter
  tmux attach-session
  exit
fi

sync() {
  git fetch --prune
  git status --short
}

generate_commands() {
  local prev=""
  echo "tmux set-hook pane-exited 'select-layout even-vertical'"
  for repo in $REPOS; do
    if [ -n "$prev" ]; then
      echo
      echo "tmux split-window -v"
    fi
    echo "tmux send-keys 'clear; cd \"$repo\"; and repo-sync .; and exit' C-m"
    prev="$repo"
  done

  echo
  echo "tmux select-layout even-vertical"
}

if [ "$1" == "." ]; then
  sync
  if [ -n "$(git status --porcelain)" ] || [ "$(git rev-parse HEAD)" != "$(git rev-parse "@{u}")" ]; then
    exit 1
  fi
else
  generate_commands | bash
fi

