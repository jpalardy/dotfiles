#-------------------------------------------------

# try to match from the right
# try ft-specific first, global next
{
  for (i = length($0); i > 0; i--) {
    ss = substr($0, i)
    for (j = 1; j <= length(pre); j++) {
      key = pre[j] ":" ss
      if (key in snippets) {
        print substr($0, 1, i-1) snippets[key]
        exit
      }
    }
  }
}

# no match, print as-is
{
  print
}
