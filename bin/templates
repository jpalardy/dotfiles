#!/bin/bash

if [ "$1" == "--list" ]; then
  # shellcheck disable=SC2012
  ls -1 "$HOME/.github/templates/" | sort
  exit
fi

dir=$1

if [ -z "$dir" ]; then
  dir=$(templates --list | fzf)
  test -z "$dir" && exit
fi

src="$HOME/.github/templates/$dir"

# do parent first, recursively
if [ -f "$src/.parent" ]; then
  templates "$(cat "$src/.parent")"
fi

rsync -av --exclude .parent --exclude after.sh "$src/" .

if test -e "$src/after.sh"; then
  bash "$src/after.sh"
fi

