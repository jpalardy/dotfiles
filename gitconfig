[user]
  name = Jonathan Palardy
  email = jonathan.palardy@gmail.com
[color]
  ui = auto
[alias]
  st      = !git_status
  b       = branch
  ba      = branch -a
  bav     = branch -a -vvv
  co      = checkout
  out     = log FETCH_HEAD..HEAD
  in      = log HEAD..FETCH_HEAD
  ignored = !git clean -ndX | sed -e 's/^Would remove //'
  ffm     = merge --ff-only
  ffp     = pull --ff-only
  cp      = cherry-pick
[diff]
  noprefix = true
  tool = vimdiff
[push]
  default = current
[core]
  excludesfile = ~/.gitignore
