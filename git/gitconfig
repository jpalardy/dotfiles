[user]
  name = Jonathan Palardy
  email = jonathan.palardy@gmail.com
[color]
  ui = auto
[alias]
  st        = status --short --branch
  ffm       = merge --ff-only
  gone      = !git branch -vv | sed -e 's/^..//' | awk '/: gone/ {print \"git branch -D\", $1}'
  rewind    = reset HEAD^
  vimdiff   = difftool
  cab       = !git log | rg -i 'co-authored-by:' | sort | uniq -c | sort -n
  behind    = !git branch -v | rg behind
  rs        = restore
  wip       = "!f() { git commit -a -m \"wip $(date +%s)\"; }; f"
  lsf       = ls-files --exclude-standard --modified --others --deleted
  di        = diff ..@{upstream}
  do        = diff @{upstream}..
[diff]
  noprefix = true
  tool = vimdiff
  algorith = histogram
  renames = true
[push]
  default = current
  autoSetupRemote = true
  followTags = true
[core]
  excludesfile = ~/.gitignore
[init]
  defaultBranch = main
[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true
[status]
  submoduleSummary = true
[pretty]
  colorful = "%Cred%h%Creset - %s %Cgreen(%cr)%Creset%C(auto)%d%Creset %C(dim white)%an%Creset"
[branch]
  sort = -committerdate
[tag]
  sort = version:refname
[fetch]
  prune = true
  pruneTags = true
  all = true
