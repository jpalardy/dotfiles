[user]
  name = Jonathan Palardy
  email = jonathan.palardy@gmail.com
[color]
  ui = auto
[alias]
  st        = status --short --branch
  co        = checkout
  outgoing  = log --oneline @{upstream}..
  incoming  = log --oneline ..@{upstream}
  do        = diff @{upstream}..
  di        = diff ..@{upstream}
  ignored   = !git clean -ndX | sed -e 's/^Would remove //'
  ffm       = merge --ff-only
  rl        = remote -v
  fp        = fetch --prune
  who       = config --get user.email
  gone      = !git branch -vv | awk '/: gone/ {print \"git branch -D\", $1}'
  untracked = ls-files --others --exclude-standard
  rewind    = reset HEAD^
[diff]
  noprefix = true
  tool = vimdiff
[push]
  default = current
[core]
  excludesfile = ~/.gitignore
[init]
  defaultBranch = main
[rebase]
  autosquash = true
[status]
  submoduleSummary = true
[pretty]
  colorful = "%Cred%h%Creset - %s %Cgreen(%cr)%Creset%C(auto)%d%Creset %C(dim white)%an%Creset"
