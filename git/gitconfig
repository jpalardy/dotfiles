[user]
  name = Jonathan Palardy
  email = jonathan.palardy@gmail.com
[color]
  ui = auto
[alias]
  st        = status --short --branch
  b         = branch
  co        = checkout
  outgoing  = log --oneline @{upstream}..
  incoming  = log --oneline ..@{upstream}
  do        = diff @{upstream}..
  di        = diff ..@{upstream}
  ignored   = !git clean -ndX | sed -e 's/^Would remove //'
  ffm       = merge --ff-only
  cp        = cherry-pick
  rl        = remote -v
  fp        = fetch --prune
  who       = config --get user.email
  mp        = merge --no-commit --no-ff
  ma        = merge --abort
  gone      = !git branch -vv | grep ': gone'
  gd        = !git branch -vv | awk '/: gone/ {print $1}' | xargs --no-run-if-empty -n1 git branch -D
  untracked = ls-files --others --exclude-standard
  av        = !vim -c 'Gstatus | only'
[diff]
  noprefix = true
  tool = vimdiff
[push]
  default = current
[core]
  excludesfile = ~/.gitignore
[init]
  defaultBranch = main
